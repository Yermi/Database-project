<Window x:Class="WpfApplication2.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="connect to oracle" Height="200" Width="300">

    <Grid>
        <StackPanel>
            <Label Content="Please enter the passsword!" HorizontalAlignment="Center" FontSize="13" Margin="0,15,0,0"></Label>
            <PasswordBox Name="oracle_password" PasswordChar="*" Width="120" FontSize="15" FontWeight="Bold"  HorizontalAlignment="Center" Margin="0,5,0,0"></PasswordBox>
            <Button Name="confirm_password" Content="Confirm" HorizontalAlignment="Center" Margin="0,8,0,0" FontSize="14" FontWeight="Bold" Width="85" Click="confirm_password_Click"></Button>
            <Label Name="load_data_label" Content="Cheking password..." HorizontalAlignment="Left" Margin="62,14,0,0" Visibility="Hidden"></Label>
            <ProgressBar Name="progress" Minimum="0" Maximum="100" Value="0" Width="150" Height="12" HorizontalAlignment="Center" Margin="0,0.5,0,0" Visibility="Hidden"></ProgressBar>
            
        </StackPanel>
    </Grid>
</Window>
